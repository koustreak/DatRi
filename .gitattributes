# Auto detect text files and perform LF normalization
* text=auto

# Go source files
*.go text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.xml text eol=lf

# Makefiles
Makefile text eol=lf
*.mk text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Protocol buffers
*.proto text eol=lf

# Binary files
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.bz2 binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
